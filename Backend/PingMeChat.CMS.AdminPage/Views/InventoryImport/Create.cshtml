@{
    ViewData["Title"] = "Đơn nhập hàng / Tạo đơn nhập hàng";
}
@section scripts
    {
    <environment names="Development">
        <script src="~/lb-views/inventoryImport/create.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/lb-views/inventoryImport/create.js" asp-append-version="true"></script>
    </environment>
}
<style>
    .main-content {
        padding: 20px;
    }

    .action-buttons {
        text-align: right;
        margin-bottom: 20px;
    }

    .product-info {
        margin-bottom: 20px;
    }

    .table-responsive {
        margin-bottom: 20px;
    }

    .pagination {
        justify-content: center;
    }

    .order-summary {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 5px;
    }

    .supplier-info {
        margin-bottom: 20px;
    }

    /*lable ininput - thẻ lable nằm trên-giữa input-border*/
    .form-group {
        margin-bottom: 1rem;
        position: relative;
    }

    .date-range-label {
        position: absolute;
        top: -0.5rem;
        left: 0.75rem;
        padding: 0 0.25rem;
        background-color: white;
        font-size: 0.8rem;
        color: #6c757d;
        z-index: 99;
        transition: all 0.2s ease-in-out;
    }

    .input-group {
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        transition: all 0.2s ease-in-out;
    }

        .input-group:focus-within {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
        }

        .input-group .form-control {
            border: none;
            box-shadow: none !important;
        }

            .input-group .form-control:focus {
                outline: none;
            }

        .input-group .btn {
            border: none;
            border-left: 1px solid #ced4da;
        }

            .input-group .btn:focus {
                box-shadow: none;
            }


    /*phục vụ phần modal*/
    body {
        font-size: 14px;
    }

    .modal-title {
        font-size: 16px;
        font-weight: bold;
    }

    .form-control, .form-select {
        font-size: 14px;
    }

    .btn {
        font-size: 14px;
    }

    .btn-primary {
        background-color: #5B9BD5;
        border-color: #5B9BD5;
    }

    .btn-warning {
        background-color: #ED7D31;
        border-color: #ED7D31;
    }

    .table {
        font-size: 13px;
    }

    .dataTables_info, .dataTables_length, .dataTables_filter {
        font-size: 13px;
    }
</style>
<div class="container-fluid ">
    <div class="card">
        <div class="card-header">
            <div class="function-header">
                <div class="d-flex mb-3">
                    <button class="btn btn-outline-secondary me-2" id="btn-filter" onclick="location.href='@Url.Action("Index")'"><i class="fas fa-backward me-1"></i>Quay lại trang danh sách</i></button>
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-9">
            <div class="card">
                <div class="card-header">
                    <div class="row justify-content-between p-3">
                        <div class="col-4">
                            @*<h4>Danh sách sản phẩm nhập</h4>*@
                        </div>
                        <div class="col-6 d-flex justify-content-end">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#addProductModal">Thêm hàng hóa vào danh sách</button>
                                <button type="button" class="btn btn-outline-secondary">Nhập từ Excel</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tableId" class="table table-striped table-bordered w-100">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Giá nhập</th>
                                    <th>Tổng giá</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card">
                <div class="card-header">
                    <div class="supplier-info">
                        <div class="form-group position-relative">
                            <label for="dateRange" class="date-range-label">Nhà cung cấp</label>
                            <div class="input-group">
                                @*<select class="form-control date-range-input" disabled>
                                    <option selected value="">--Chọn nhà cung cấp--</option>
                                </select>*@
                                <input type="text" name="artnerName" id="partnerName" class="form-control " >


                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="form-group position-relative">
                            <label for="dateRange" class="date-range-label">Ngày giờ nhập hóa đơn</label>
                            <div class="input-group">
                                <select class="form-control date-range-input" disabled>
                                    <option selected value="">--Chọn nhà cung cấp--</option>
                                </select>

                            </div>
                        </div>
                        @*  <label for="orderDate" class="form-label">Ngày giờ nhập hóa đơn:</label>
                        <input type="datetime-local" class="form-control" id="orderDate" value="2024-01-07T14:10:10">*@
                    </div>

                    <div class="order-summary">
                        <h4>Tổng tiền hàng</h4>
                        <table class="table table-sm">
                            <tr>
                                <td>Giảm giá</td>
                                <td class="text-end">0.00</td>
                            </tr>
                            <tr>
                                <td>Phụ thu</td>
                                <td class="text-end">0.00</td>
                            </tr>
                            <tr>
                                <td>VAT</td>
                                <td class="text-end">0.00</td>
                            </tr>
                            <tr>
                                <td>Phí ship</td>
                                <td class="text-end">0.00</td>
                            </tr>
                            <tr>
                                <th>Tổng tiền thanh toán</th>
                                <th class="text-end">0</th>
                            </tr>
                            <tr>
                                <td>Đã thanh toán</td>
                                <td class="text-end">0</td>
                            </tr>
                            <tr>
                                <td>Công nợ</td>
                                <td class="text-end">0</td>
                            </tr>
                        </table>
                        <button class="btn btn-primary w-100" id="payment">Thanh toán</button>
                    </div>

                    <div class="mb-3">
                        <label for="note" class="form-label">Ghi chú:</label>
                        <textarea class="form-control" id="note" rows="3"></textarea>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

<!-- Modal thêm hàng hóa vào danh sách -->
<<div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="searchModalLabel">Thêm sản phẩm vào đơn hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addProductForm">
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                <label for="productId" class="form-label">Sản phẩm <span class="text-danger">*</span></label>
                                <select name="productId" class="select2 form-select" id="productId" style="width: 100%;" required>
                                </select>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Giá nhập <span class="text-danger">*</span></label>
                                <input type="text" name="cost" id="cost" class="form-control money-input" data-raw-value="0">
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Số lượng <span class="text-danger">*</span></label>
                                <input name="quantity" type="number" class="form-control" required>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="addToOrder">Thêm vào đơn</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal chỉnh sửa sản phẩm trong danh sách -->
<div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProductModalLabel">Chỉnh sửa sản phẩm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editProductForm">
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Sản phẩm</label>
                                <input type="text" id="editProductName" class="form-control" readonly>
                                <input type="hidden" id="editProductId">
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Giá nhập <span class="text-danger">*</span></label>
                                <input type="text" name="editCost" id="editCost" class="form-control money-input" data-raw-value="0">
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Số lượng <span class="text-danger">*</span></label>
                                <input name="editQuantity" id="editQuantity" type="number" class="form-control" required>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="updateProduct">Cập nhật</button>
            </div>
        </div>
    </div>
</div>