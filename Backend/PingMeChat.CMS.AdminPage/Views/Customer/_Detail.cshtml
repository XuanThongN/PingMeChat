@using PingMeChat.Shared.Utils
@using PingMeChat.CMS.Application.Feature.Service.Customers.Dto
@model CustomerDto
<div class="modal-content">
    <!-- Modal Header -->
    <div class="modal-header bg-info text-white">
        <h5 class="modal-title" id="customerModalLabel">Chi tiết</h5>
        <button type="button" class="close text-white" data-bs-dismiss="modal" aria-bs-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <!-- Modal Body -->
    <div class="modal-body">
        <form id="customerForm">
            <div class="form-row">
                <div class="col-12 col-md-6">
                    <div class="mb-3">
                        <label for="FullName" class="form-label">Họ và tên </label>
                        <input asp-for="FullName" type="text" class="form-control form-control-sm" placeholder="Nhập Họ tên Khách hàng" readonly>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="mb-3">
                        <label for="PhoneNumber" class="form-label">Điện thoại </label>
                        <input value="@Model.PhoneNumber.FormatVietnamesePhoneNumber()" type="text" class="form-control form-control-sm" placeholder="Nhập Số điện thoại" readonly>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="mb-3">
                        <label for="Address" class="form-label">Địa chỉ </label>
                        <input asp-for="Address" type="text" class="form-control form-control-sm" placeholder="Nhập Địa chỉ" readonly>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <!-- Modal Footer -->
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
    </div>
</div>
