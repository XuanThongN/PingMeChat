@using PingMeChat.CMS.Application.Feature.Service.BidaTables.Dto
@model BidaTableCreateDto
@*Modal để thêm mới loại bàn*@
<div class="modal" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="">Thêm mới loại bàn</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="CreateBidaTableForm">

                    <div class="row">
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                <label for="Code" class="form-label">Mã bàn <span class="text-danger">*</span> </label>
                                <input asp-for="Code" type="text" class="form-control form-control-sm" placeholder="Nhập mã bàn">
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                <label for="BidaTableStatus" class="form-label">Loại bàn <span class="text-danger">*</span></label>

                                <select name="BidaTableTypeId" id="BidaTableTypeId" class="form-control form-control-sm select2">
                                    @*<option selected value="">--Tất cả--</option>*@
                                </select>
                            </div>
                        </div>

                    </div>
                    @await Html.PartialAsync("~/Views/Shared/Components/Element/SaveComponent.cshtml")
                </form>
            </div>
        </div>
    </div>
</div>


