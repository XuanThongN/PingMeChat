@{
    ViewData["Title"] = "Quản lý bàn bida";
}

@section scripts
    {
    <environment names="Development">
        <script src="~/lb-views/bidaTable/index.js" asp-append-version="true"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    </environment>

    <environment names="Staging,Production">
        <script src="~/lb-views/bidaTable/index.js" asp-append-version="true"></script>
    </environment>
}
<div class="container-fluid mt-3">

    <div class="card">
        <div class="card-header">
            <div class="function-header">
                <div class="d-flex mb-3">
                    @*<button class="btn btn-warning me-2" id="btn-filter"> <i class="fas fa-search me-1 "></i>Bộ lọc</button>*@
                    @*<button class="btn btn-outline-secondary bg-primary me-2 " data-bs-target="#CreateBidaTableModal" data-bs-toggle="modal"> <i class="fas fa-plus-circle me-1"></i>Tạo mới</button>*@
                    @await Html.PartialAsync("/Views/BidaTable/Index.AdvancedHeader.cshtml")

                </div>
            </div>
            <form id="form-filter">
                @await Html.PartialAsync("/Views/BidaTable/Index.CustomSearch.cshtml")
                @await Html.PartialAsync("/Views/BidaTable/Index.AdvancedSearch.cshtml")

            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="BidaTable-table" class="table table-striped table-bordered w-100">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã bàn</th>
                            <th>Loại bàn</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- DataTables sẽ tự động điền dữ liệu vào đây -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @*Modal tạo mới BidaTableType*@
    @await Html.PartialAsync("/Views/BidaTable/_Create.cshtml", null)

    @*Modal hiển thị chi tiết BidaTableType*@
    <div class="modal fade" id="ViewDetailBidaTableModal" tabindex="-1" aria-labelledby="ViewDetailBidaTableTypeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
        </div>
    </div>

    @*Modal cập nhật BidaTable*@
    <div class="modal fade" id="UpdateBidaTableModal" tabindex="-1" aria-labelledby="UpdateBidaTableTypeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content"></div>
        </div>
    </div>


    @*Modal xoá BidaTableType*@
    @await Html.PartialAsync("/Views/BidaTable/_Delete.cshtml", null)

</div>


