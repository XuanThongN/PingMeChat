@{
    ViewData["Title"] = "Tồn kho";
}
<style>
    .card {
        margin-bottom: 20px;
    }

    .dropdown-menu {
        min-width: 200px;
    }
</style>
<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-3">
            <input type="text" class="form-control" value="01/07/2024 - 01/07/2024">
        </div>
        <div class="col-md-3">
            <select class="form-select">
                <option selected>Tất cả</option>
                <!-- Thêm các nhóm hàng hóa khác -->
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select">
                <option selected>Kho trung tâm</option>
                <!-- Thêm các kho khác -->
            </select>
        </div>
        <div class="col-md-3">
            <input type="text" class="form-control" placeholder="Tên sản phẩm, mã sản phẩm">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <select class="form-select">
                <option selected>Lọc dữ liệu</option>
                <!-- Thêm các tùy chọn lọc -->
            </select>
        </div>
        <div class="col-md-9 text-end">
            <div class="btn-group">
                <button type="button" class="btn btn-warning dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    Xuất báo cáo
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#" onclick="exportReport('excel')">Excel</a></li>
                    <li><a class="dropdown-item" href="#" onclick="exportReport('pdf')">PDF</a></li>
                    <li><a class="dropdown-item" href="#" onclick="exportReport('csv')">CSV</a></li>
                </ul>
            </div>
            <button class="btn btn-secondary" onclick="resetInventory()">Đặt lại tồn kho</button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">GIÁ TRỊ TỒN KHO</h5>
                    <p class="card-text text-primary">0</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">TỒN KHO DƯỚI ĐỊNH MỨC</h5>
                    <p class="card-text text-danger">0</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">TỒN KHO VƯỢT ĐỊNH MỨC</h5>
                    <p class="card-text text-warning">0</p>
                </div>
            </div>
        </div>
    </div>

    <table class="table mt-3">
        <thead>
            <tr>
                <th>#</th>
                <th>MÃ SẢN PHẨM</th>
                <th>TÊN SẢN PHẨM</th>
                <th>ĐƠN VỊ TÍNH</th>
                <th>GIÁ VỐN TRUNG BÌNH</th>
                <th>TỒN ĐẦU</th>
                <th>NHẬP</th>
                <th>NHẬP KHÁCH HÀNG TRẢ LẠI</th>
                <th>SẢN XUẤT</th>
                <th>CHUYỂN KHO NỘI BỘ</th>
                <th>NHẬP KIỂM KÊ</th>
                <th>NHẬP HỦY</th>
                <th>XUẤT BÁN HÀNG</th>
                <th>XUẤT TRẢ NCC</th>
                <th>XUẤT HÀNG HÓA</th>
                <th>XUẤT HỦY</th>
                <th>XUẤT KHÁC</th>
                <th>CHUYỂN KHO NỘI BỘ</th>
                <th>XUẤT KIỂM KÊ</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="19" class="text-center">Không có dữ liệu trong bảng</td>
            </tr>
        </tbody>
    </table>

    <div class="row mt-3">
        <div class="col-md-6">
            <select class="form-select" style="width: 80px;">
                <option selected>10</option>
                <option>20</option>
                <option>50</option>
            </select>
        </div>
        <div class="col-md-6 text-end">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">&laquo;</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item disabled">
                        <a class="page-link" href="#">&raquo;</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function exportReport(type) {
        // Đây là nơi bạn sẽ thêm logic để xuất báo cáo
        console.log(`Xuất báo cáo dạng ${type}`);
        // Trong thực tế, bạn sẽ gọi API hoặc xử lý dữ liệu để tạo file tương ứng
        alert(`Đang xuất báo cáo dạng ${type}. Tính năng này sẽ được triển khai sau.`);
    }

    function resetInventory() {
        // Đây là nơi bạn sẽ thêm logic để đặt lại tồn kho
        console.log('Đặt lại tồn kho');
        // Trong thực tế, bạn sẽ gọi API hoặc xử lý dữ liệu để đặt lại tồn kho
        if (confirm('Bạn có chắc chắn muốn đặt lại tồn kho? Hành động này không thể hoàn tác.')) {
            alert('Tồn kho đã được đặt lại. Tính năng này sẽ được triển khai sau.');
        }
    }
</script>