@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using PingMeChat.CMS.Application.Feature.Indentity.Auth.Dto
@model LoginDto

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "";
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PingMeChat - Đăng nhập</title>
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">*@
    <link href="/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/lb-views/account/site.css" rel="stylesheet">

</head>
<body>
    <div class="container main-content">
        <div class="card p-4" id="loginCard">
            <div class="logo">
                <img src="~/images/logo-full.jfif" alt="logo" />
            </div>
            <h2 class="mb-4 text-center" style="color: #ff8c00;">Đăng nhập</h2>
            <div class="text-danger" asp-validation-summary="All"></div>
            <form asp-controller="Account" asp-action="Login" method="post" class="login-form">
                <div class="mb-3">
                    <input asp-for="UserName" type="text" class="form-control" placeholder="Tên đăng nhập" required>
                </div>
                <div class="mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" required>
                </div>
                <div class="mb-3 text-end">
                    <a href="#" class="text-decoration-none">Quên mật khẩu?</a>
                </div>
                <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
            </form>
            <div class="mt-3 text-center">
                <p>hoặc</p>
                <button class="btn btn-outline-secondary w-100">Đăng nhập dùng mã gian hàng</button>
            </div>
        </div>
    </div>
