@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using PingMeChat.CMS.Application.Feature.Indentity.Auth.Dto
@model RegisterDto 

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PingMeChat - Đăng ký</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #fff5e6;
            font-family: Arial, sans-serif;
        }

        .logo {
            max-width: 150px;
            margin-bottom: 2rem;
        }

        .form-container {
            background-color: white;
            border-radius: 10px;
            padding: 2rem;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            max-width: 800px;
            margin: 2rem auto;
        }

        .form-step {
            background-color: #ffd580;
            color: #333;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .nav-tabs .nav-link {
            color: #6c757d;
        }

            .nav-tabs .nav-link.active {
                font-weight: bold;
                color: #333;
            }

        .tab-content {
            padding-top: 1rem;
        }

        .btn-register {
            background-color: #e9ecef;
            color: #333;
            border: none;
        }

            .btn-register:hover {
                background-color: #dee2e6;
            }

        body {
            background-color: #fff5e6;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .main-content {
            flex: 1;
        }

        .logo {
            max-width: 200px;
            margin-bottom: 20px;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .btn-primary {
            background-color: #ffa500;
            border-color: #ffa500;
        }

            .btn-primary:hover {
                background-color: #ff8c00;
                border-color: #ff8c00;
            }

        footer {
            background-color: #f8f9fa;
            padding: 10px 0;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="container main-content d-flex align-items-center justify-content-center">
        <div class="text-center">
            <div class="card p-4" id="registerCard">
                <h2 class="mb-4">Đăng ký</h2>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form asp-controller="Account" asp-action="Register" method="post" class="login-form">
                    <div class="input-group mb-3">
                        <input asp-for="Email" type="text" class="form-control rounded-left" placeholder="Email" required>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="UserName" type="text" class="form-control rounded-left" placeholder="Tên đăng nhập" required>
                    </div>
                    <div class="input-group mb-3 d-flex">
                        <input asp-for="Password" type="password" class="form-control rounded-left" placeholder="Mật khẩu" required>
                    </div>
                    <div class="input-group mb-3 d-flex">
                        <input asp-for="ConfirmPassword" type="password" class="form-control rounded-left" placeholder="Nhập lại Mật khẩu" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" style="background: #a12c2f" class="btn text-white rounded submit p-2 px-5">Đăng ký</button>
                    </div>
                </form>
                <div class="mt-3">
                    <p>Bạn đã có tài khoản? <a asp-action="Login" id="registerLink" class="text-decoration-none">Đăng nhập</a></p>
                </div>
            </div>
        </div>
    </div>
    <footer class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-md-start">
                    CÔNG TY CỔ PHẦN CÔNG NGHỆ <br>
                    1900-3016 (từ 8h00 đến 22h00 hằng ngày)<br>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="#" class="text-decoration-none">Chính sách bảo mật thông tin</a><br>
                    <a href="#" class="text-decoration-none">Thỏa thuận quyền sử dụng</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
