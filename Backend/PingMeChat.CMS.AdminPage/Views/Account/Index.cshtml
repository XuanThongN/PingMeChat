@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PosApp - Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #fff5e6;
            font-family: Arial, sans-serif;
        }

        .logo {
            max-width: 150px;
            margin-bottom: 2rem;
        }

        .form-container {
            background-color: white;
            border-radius: 10px;
            padding: 2rem;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            max-width: 800px;
            margin: 2rem auto;
        }

        .form-step {
            background-color: #ffd580;
            color: #333;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .nav-tabs .nav-link {
            color: #6c757d;
        }

            .nav-tabs .nav-link.active {
                font-weight: bold;
                color: #333;
            }

        .tab-content {
            padding-top: 1rem;
        }

        .btn-register {
            background-color: #e9ecef;
            color: #333;
            border: none;
        }

            .btn-register:hover {
                background-color: #dee2e6;
            }

        body {
            background-color: #fff5e6;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .main-content {
            flex: 1;
        }

        .logo {
            max-width: 200px;
            margin-bottom: 20px;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .btn-primary {
            background-color: #ffa500;
            border-color: #ffa500;
        }

            .btn-primary:hover {
                background-color: #ff8c00;
                border-color: #ff8c00;
            }

        footer {
            background-color: #f8f9fa;
            padding: 10px 0;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="container main-content d-flex align-items-center justify-content-center">
        <div class="text-center">
            <img src="path_to_posapp_logo.png" alt="PosApp Logo" class="logo">
            <div class="card p-4" id="loginCard">
                <h2 class="mb-4">Đăng nhập</h2>
                <form>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Tên đăng nhập" required>
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" placeholder="Mật khẩu" required>
                    </div>
                    <div class="mb-3 text-end">
                        <a href="#" class="text-decoration-none">Quên mật khẩu?</a>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                </form>
                <div class="mt-3">
                    <p>hoặc</p>
                    <button class="btn btn-outline-secondary w-100">Đăng nhập dùng mã gian hàng</button>
                </div>
                <div class="mt-3">
                    <p>Bạn chưa có tài khoản? <a href="#" id="registerLink" class="text-decoration-none">Đăng ký</a></p>
                </div>
            </div>
            <div class="card p-4 d-none" id="registerCard">
                <h2 class="mb-4">Đăng ký</h2>
                <ul class="nav nav-pills mb-3" id="registerTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="business-tab" data-bs-toggle="pill" data-bs-target="#business" type="button" role="tab" aria-controls="business" aria-selected="true">1. Ngành hàng kinh doanh</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="account-tab" data-bs-toggle="pill" data-bs-target="#account" type="button" role="tab" aria-controls="account" aria-selected="false">2. Thông tin tài khoản</button>
                    </li>
                </ul>
                <div class="tab-content" id="registerTabContent">
                    <div class="tab-pane fade show active" id="business" role="tabpanel" aria-labelledby="business-tab">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <img src="path_to_food_icon.png" alt="Ẩm thực" class="mb-2" style="width: 50px;">
                                        <p>Ẩm thực</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <img src="path_to_service_icon.png" alt="Dịch vụ" class="mb-2" style="width: 50px;">
                                        <p>Dịch vụ</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <img src="path_to_retail_icon.png" alt="Bán lẻ" class="mb-2" style="width: 50px;">
                                        <p>Bán lẻ</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <img src="path_to_hourly_service_icon.png" alt="Dịch vụ theo giờ" class="mb-2" style="width: 50px;">
                                        <p>Dịch vụ theo giờ</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="account" role="tabpanel" aria-labelledby="account-tab">
                        <div class="form-step">2 Thông tin tài khoản</div>
                        <form id="registrationForm">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="username" class="form-label">Tên đăng nhập *</label>
                                    <input type="text" class="form-control" id="username" value="0948327485" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="password" class="form-label">Mật khẩu *</label>
                                    <input type="password" class="form-control" id="password" value="••••••••" required>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="storeName" class="form-label">Tên cửa hàng *</label>
                                    <input type="text" class="form-control" id="storeName" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="businessType" class="form-label">Lĩnh vực</label>
                                    <select class="form-select" id="businessType">
                                        <option selected>Thẩm mỹ viện & beauty spa</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-2">
                                    <label for="countryCode" class="form-label">&nbsp;</label>
                                    <select class="form-select" id="countryCode">
                                        <option selected>+84</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="phone" class="form-label">Số điện thoại *</label>
                                    <input type="tel" class="form-control" id="phone" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email *</label>
                                    <input type="email" class="form-control" id="email" required>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="country" class="form-label">Quốc gia *</label>
                                    <select class="form-select" id="country">
                                        <option selected>Vietnam</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="city" class="form-label">Tỉnh/TP - Quận/Huyện *</label>
                                    <select class="form-select" id="city">
                                        <option selected>Tỉnh/TP - Quận/Huyện *</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="referralCode" class="form-label">Mã giới thiệu</label>
                                <input type="text" class="form-control" id="referralCode">
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="createSampleData" checked>
                                <label class="form-check-label" for="createSampleData">Khởi tạo dữ liệu mẫu</label>
                            </div>
                            <button type="submit" class="btn btn-register w-100">Đăng ký</button>
                            <div class="text-center mt-3">
                                <a href="#" class="text-decoration-none">← Đăng nhập</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="#" id="backToLoginLink" class="text-decoration-none">← Đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
    <footer class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-md-start">
                    CÔNG TY CỔ PHẦN CÔNG NGHỆ <br>
                    1900-3016 (từ 8h00 đến 22h00 hằng ngày)<br>
                    <a href="https://p" class="text-decoration-none">https://mywebsite</a>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="#" class="text-decoration-none">Chính sách bảo mật thông tin</a><br>
                    <a href="#" class="text-decoration-none">Thỏa thuận quyền sử dụng</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('registerLink').addEventListener('click', function (e) {
            e.preventDefault();
            document.getElementById('loginCard').classList.add('d-none');
            document.getElementById('registerCard').classList.remove('d-none');
        });

        document.getElementById('backToLoginLink').addEventListener('click', function (e) {
            e.preventDefault();
            document.getElementById('registerCard').classList.add('d-none');
            document.getElementById('loginCard').classList.remove('d-none');
        });
    </script>
</body>
</html>