<div class="justify-content-start">
    <div class="form-inline m-0">
        <div class="form-group border rounded">
            @if (Model.IsSearch)
            {
                <button type="button" class="btn btn-light btn-reset py-2 px-2">
                    <i class="fas fa-sync-alt text-warning"></i> Làm mới
                </button>
            }
            @if (Model.IsReset)
            {
                <button type="submit" class="btn btn-light save-button py-2 px-2">
                    <i class="fas fa-search text-primary"></i> Tìm kiếm
                </button>
            }
        </div>
    </div>
</div>