<section class="content-header py-0">
    <div class="modal-footer justify-content-start border-top-0 py-0 px-0">
        <div class="form-inline m-0">
            <div class="form-group border rounded">
                @if (Model.HasBack)
                {
                    <a asp-action="Index" class="btn btn-light save-button py-1 px-2">
                        <i class="far fa-arrow-alt-circle-left text-warning text-md "></i> Quay lại
                    </a>
                }
                @if (Model.HasCreateNew)
                {
                    <a href="javascript:;" data-bs-toggle="modal" data-bs-target="#createModal" class="btn btn-outline-primary py-1 px-2">
                        <i class="fas fa-plus  text-md "></i> Thêm mới
                    </a>
                }
            </div>
        </div>
    </div>
</section>