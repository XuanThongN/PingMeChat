@{
    ViewData["Title"] = "Error 401 - Unauthorized";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Lockscreen</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/libs/font-awesome/css/all.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/libs/admin-lte/css/adminlte.min.css" />
</head>
<body class="hold-transition lockscreen">
    <!-- Automatic element centering -->
    <div class="lockscreen-wrapper">
        <div class="lockscreen-logo">
            <a href="../../index2.html"><b>BIDA</b></a>
        </div>
        <!-- User name -->
        <div class="lockscreen-name">@User.Identity.Name</div>

        <!-- START LOCK SCREEN ITEM -->
        <div class="lockscreen-item">
            <!-- lockscreen image -->
            <div class="lockscreen-image">
                <img src="~/images/avata/avatar5.png" alt="User Image">
            </div>
            <!-- /.lockscreen-image -->
            <!-- lockscreen credentials (contains the form) -->
            <form class="lockscreen-credentials">
                <div class="input-group">
                    @*<button class="btn btn-light text-danger" disabled>401 - Thiếu quyền</button>*@

                    <input type="text" class="form-control" placeholder="404 - Địa chỉ hoặc tài nguyên không tìm thấy">
                    @*<div class="input-group-append">
                    <button type="button" class="btn">
                    <i class="fas fa-arrow-right text-muted"></i>
                    </button>
                    </div>*@
                </div>
            </form>
            <!-- /.lockscreen credentials -->

        </div>
        <!-- /.lockscreen-item -->
        <div class="help-block text-center">
           Địa chỉ hoặc tài nguyên hiện không thể tìm thấy
        </div>
        <div class="text-center my-2">
            <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post">
                <button class="btn btn-light text-primary">Đăng nhập với một tài khoản khác</button>
            </form>
            @*<a href="login.html">Hoặc đặng nhập với một tài khoản khác</a>*@
        </div>
        <div class="lockscreen-footer text-center">
            <strong>Bản quyền &copy; @DateTime.Now.Year <a href="#">Phú Xuân PingMeChat</a>.</strong>.
        </div>
    </div>
    <!-- /.center -->
    <!-- jQuery -->
    <script src="~/libs/jquery/jquery.js" asp-append-version="true"></script>

    <!-- Bootstrap 4 -->
    @*<script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>*@
</body>
</html>