<!-- Modal Thêm phiếu thu -->
<div class="modal fade" id="addReceiptModal" tabindex="-1" aria-labelledby="addReceiptModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addReceiptModalLabel">Thêm phiếu thu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="amount" class="form-label">Số tiền *</label>
                            <input type="number" class="form-control" id="amount" value="0.00">
                        </div>
                        <div class="col-md-6">
                            <label for="receiveDate" class="form-label">Ngày nhận tiền</label>
                            <input type="datetime-local" class="form-control" id="receiveDate" value="2024-07-01T13:58:44">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="fundType" class="form-label">Quỹ tiền</label>
                            <select class="form-select" id="fundType">
                                <option selected>Tiền mặt</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="group" class="form-label">Nhóm *</label>
                            <select class="form-select" id="group">
                                <option selected>-- Chọn nhóm --</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="payer" class="form-label">Nhóm người chi</label>
                            <select class="form-select" id="payer">
                                <option selected>Chọn nhóm người chi</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="payerPerson" class="form-label">Người chi</label>
                            <select class="form-select" id="payerPerson">
                                <option selected>Chọn người chi</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="accountingDate" class="form-label">Ngày hạch toán *</label>
                        <input type="date" class="form-control" id="accountingDate" value="2024-07-01">
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="calculateInProfit">
                        <label class="form-check-label" for="calculateInProfit">
                            Tính vào chi phí để tính lãi lỗ
                        </label>
                    </div>
                    <div class="mb-3">
                        <label for="note" class="form-label">Ghi chú</label>
                        <textarea class="form-control" id="note" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Thoát</button>
                <button type="button" class="btn btn-primary">Lưu</button>
                <button type="button" class="btn btn-warning">Lưu và Xác nhận</button>
