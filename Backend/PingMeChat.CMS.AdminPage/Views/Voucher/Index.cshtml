@{
    ViewData["Title"] = "Voucher";
}


<style>
    .form-select, .form-control {
        max-width: 100%;
    }

    .flag-icon {
        width: 20px;
        height: 15px;
        margin-right: 5px;
    }
</style>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Tạo mã voucher</h4>
        <div class="d-flex align-items-center">
            <img src="path_to_vietnam_flag.png" alt="VN" class="flag-icon">
            <select class="form-select me-2" style="width: auto;">
                <option>VI</option>
            </select>
            <input type="text" class="form-control" value="0948327485: 12/07/2024" style="width: auto;">
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-end mb-4">
                <button class="btn btn-warning">Xem danh sách đợt phát hành</button>
            </div>

            <form>
                <div class="mb-3">
                    <label for="branch" class="form-label">Chi nhánh</label>
                    <select id="branch" class="form-select">
                        <option>0948327485</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="release" class="form-label">Chọn đợt phát hành *</label>
                    <select id="release" class="form-select" required>
                        <option value="">Chọn đợt phát hành</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="quantity" class="form-label">Nhập số lượng mã giảm giá (Tối đa là 20) *</label>
                    <input type="number" id="quantity" class="form-control" value="0" min="0" max="20" required>
                </div>

                <div class="mb-3">
                    <p>Số lượng còn lại: 0</p>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Lấy mã giảm giá</button>
                </div>
            </form>
        </div>
    </div>
</div>
