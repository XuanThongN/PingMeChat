@using PingMeChat.CMS.Application.Feature.Service.Inventories.Dto;
@model InventoryDto
<div class="modal-content">
    <!-- Modal Header -->
    <div class="modal-header bg-info text-white">
        <h5 class="modal-title" id="inventoryModalLabel">Chi tiết</h5>
        <button type="button" class="close text-white" data-bs-dismiss="modal" aria-bs-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <!-- Modal Body -->
    <div class="modal-body">
        <form id="inventoryForm">
            <div class="form-row">
                <div class="form-group col-md-6 d-none">
                    <label asp-for="Id">ID</label>
                    <input asp-for="Id" class="form-control" readonly hidden />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ProductName">Tên Sản phẩm</label>
                    <input asp-for="ProductName" class="form-control" readonly />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Quantity">Số lượng tồn kho</label>
                    <input asp-for="Quantity" class="form-control" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Cost">Giá nhập</label>
                    <input asp-for="Cost" class="form-control" readonly />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Price">Giá bán</label>
                    <input asp-for="Price" class="form-control" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="UpdatedDateString">Lần cập nhật cuối</label>
                    <input asp-for="UpdatedDateString" class="form-control" readonly />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="UpdatedBy">Cập nhật bởi</label>
                    <input asp-for="UpdatedBy" class="form-control" readonly />
                </div>
            </div>
        </form>
    </div>
    <!-- Modal Footer -->
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
    </div>
</div>
