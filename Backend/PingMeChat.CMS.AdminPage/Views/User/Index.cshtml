@{
    ViewData["Title"] = "Quản lý tài khoản người dùng";
}

@section scripts
    {
    <environment names="Development">
        <script src="~/lb-views/user/index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/lb-views/user/index.js" asp-append-version="true"></script>
    </environment>
}
@section styles{
    <link rel="stylesheet" href="~/lb-views/user/site.css" />
}
<div class="container-fluid mt-3">

    <div class="card">
        <div class="card-header">
            @await Html.PartialAsync("/Views/User/Index.AdvancedHeader.cshtml")

            <form id="form-filter">
                @await Html.PartialAsync("/Views/User/Index.CustomSearch.cshtml")
                @await Html.PartialAsync("/Views/User/Index.AdvancedSearch.cshtml")

            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="tableId" class="table table-striped table-bordered w-100">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th></th>
                            <th>Tài khoản</th>
                            <th>Email</th>
                            <th>Ngày đăng ký</th>
                            <th>Trạng thái</th>
                            <th>Chủ sở hữu</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- DataTables sẽ tự động điền dữ liệu vào đây -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@await Html.PartialAsync("~/Views/User/_CreateModal.cshtml")


<div class="modal fade" id="modalView" role="dialog" tabindex="-1" aria-labelledby="modalViewLabel" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          
        </div>
    </div>
</div>
<!-- Modal hiện thị form chỉnh sửa-->
<div class="modal fade" id="editModal" role="dialog" tabindex="-1" aria-labelledby="editModalLabel" data-bs-backdrop="static" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/User/_Update.cshtml")
        </div>
    </div>
</div>

<!-- Modal xác nhận khóa tài khoản-->
<div class="modal fade" id="lockAccountModal" tabindex="-1" aria-labelledby="lockAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lockAccountModalLabel">Xác nhận  khóa tài khoản [<span class="userNameAccount"></span>]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn khóa tài khoản [<b><span class="userNameAccount"></span></b>] không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-success" id="lockAccountModalBtn">Xác nhận</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal xác nhận mở khóa tài khoản-->
<div class="modal fade" id="unlockAccountModal" tabindex="-1" aria-labelledby="unlockAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lockAccountModalLabel">Xác nhận mở khóa tài khoản [<span class="userNameAccount"></span>]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn mở khóa tài khoản [<b><span class="userNameAccount"></span></b>] không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-success" id="unlockAccountModalBtn">Xác nhận</button>
            </div>
        </div>
    </div>
</div>