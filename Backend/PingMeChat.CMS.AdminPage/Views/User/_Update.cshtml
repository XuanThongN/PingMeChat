@*@await Html.PartialAsync("~/Views/Shared/Form/_ModalHeader.cshtml", new FormHeaderViewModel($"Thông tin tiết về tài
khoản {@Model.UserName}", false, false))*@
<div class="modal-content">

    <div class="modal-header bg-warning text-white">
        <h5 class="modal-title" id="editModalLabel">Cập nhật</h5>
        <button type="button" class="close text-white" data-bs-dismiss="modal" aria-bs-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="information-title">
            <a name="infoAccount" class="form-menu">Thông tin tài khoản</a>
        </div>
        <form id="updateForm">
            <div class="row">
                <div class="col-md-12 mb-2">
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                               for="Name">Tài khoản</label>
                        <div class="col-sm-10 input-group-sm">
                            <input id="userName" name="userName" class="form-control" aria-label="Small"
                                   aria-describedby="inputGroup-sizing-sm" disabled>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mb-2">
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                               for="NgayTao">Email<span class="text-danger align-top ">*</span></label>
                        <div class="col-sm-10 input-group-sm">
                            <input name="email" class="form-control" aria-label="Small"
                                   aria-describedby="inputGroup-sizing-sm">
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mb-2">
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                               for="NgayTao">Số điện thoại<span class="text-danger align-top ">*</span></label>
                        <div class="col-sm-10 input-group-sm">
                            <input name="phoneNumber" class="form-control" aria-label="Small"
                                   aria-describedby="inputGroup-sizing-sm">
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mb-2">
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                               for="NgayTao">Ngày đăng ký</label>
                        <div class="col-sm-10 input-group-sm">
                            <input name="dateRegistered" class="form-control" aria-label="Small"
                                   aria-describedby="inputGroup-sizing-sm" disabled>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mb-2">
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                               for="NgayTao">Trạng thái<span class="text-danger align-top ">*</span></label>
                        <div class="col-sm-10 input-group-sm">
                            <select name="isLocked" class="form-control form-control-sm">
                                <option value="true">Đã khóa</option>
                                <option value="false">Hoạt động</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 mb-2">
                    <div class="form-group row mb-0 required">
                        <label class="col-md col-form-label control-label text-right font-weight-normal custom-label"
                               for="NgayTao">Tên chủ sở hữu<span class="text-danger align-top ">*</span></label>
                        <div class="col-sm-10 input-group-sm">
                            <input name="fullName" class="form-control" aria-label="Small"
                                   aria-describedby="inputGroup-sizing-sm">
                        </div>
                    </div>
                </div>
            </div>
            <div class="information-title">
                <a name="titlePermissions" class="information-general">Cập nhật quyền</a>
            </div>
            <div class="col-md-6">
                <div class="form-group row mb-0 ">
                    <label class="col-form-label control-label font-weight-normal">Nhóm người dùng</label>
                    <select name="groupIds" class="form-select select2" id="updateGroupId" multiple>
                    </select>
                </div>
            </div>
            <!-- Modal Footer -->
            <div class="modal-footer">
                @await Html.PartialAsync("~/Views/Shared/Components/Element/SaveAndCancel.cshtml")
            </div>
        </form>
    </div>

</div>